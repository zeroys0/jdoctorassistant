<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <include layout="@layout/titlebar_activity" >
    </include>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/username"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_name_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_username_edt"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_password_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/login_password_edt"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/register_password_set_img"
            android:layout_width="@dimen/activity_bar_hei"
            android:layout_height="@dimen/title_name_text"
            android:layout_marginRight="18dp"
            android:adjustViewBounds="true"
            android:background="@drawable/visiable_check_bg"
            android:button="@null"
            android:gravity="center_vertical" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/password_cure"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_againPassword_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/login_again_password_edt"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/register_againpassword_set_img"
            android:layout_width="@dimen/activity_bar_hei"
            android:layout_height="@dimen/title_name_text"
            android:layout_marginRight="18dp"
            android:adjustViewBounds="true"
            android:background="@drawable/visiable_check_bg"
            android:button="@null"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_username_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_name_edt"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/sex"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <RadioGroup
            android:id="@+id/register_sex_group"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:padding="@dimen/margin_bottom" >

            <RadioButton
                android:id="@+id/register_sex_man"
                style="@style/w_wrap_h_wrap"
                android:background="@drawable/sex_man_bg"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/register_sex_woman"
                style="@style/w_wrap_h_wrap"
                android:layout_marginLeft="@dimen/title_bar_text"
                android:background="@drawable/sex_woman_bg"
                android:button="@null" />
        </RadioGroup>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/birth"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <TextView
            android:id="@+id/register_birthday"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="1992-09-10"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/register_phone"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_phone_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_phone_edt"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/register_email"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_email_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_email_edt"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/register_address"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />

        <EditText
            android:id="@+id/register_address_edt"
            style="@style/w_weight_h_full"
            android:layout_marginLeft="@dimen/margin"
            android:layout_weight="5"
            android:background="@null"
            android:ems="10"
            android:hint="@string/register_address_edt"
            android:inputType="text"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_width"
        android:src="@color/gray_bg" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_bar"
        android:layout_marginTop="@dimen/title_bar_text"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/register_agreement_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/activity_title_bar"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/agreement_normal"
            android:button="@null"
            android:gravity="center_vertical"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:gravity="center_vertical"
            android:text="@string/agreement_register"
            android:textColor="@color/black"
            android:textSize="@dimen/title_bar_text" />
    </LinearLayout>

    <Button
        android:id="@+id/register_register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_bar"
        android:layout_marginLeft="@dimen/title_bar_text"
        android:layout_marginRight="@dimen/title_bar_text"
        android:layout_marginTop="@dimen/title_name_text"
        android:background="@drawable/register_crue_btn_bg"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/login_register_btn"
        android:textColor="@color/white_bg"
        android:textSize="20dp" />

</LinearLayout>
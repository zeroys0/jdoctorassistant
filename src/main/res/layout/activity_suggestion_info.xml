<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.doctor.userlist.SuggestionInfoActivity">
    <include
        android:id="@+id/suggestion_info_title"
        layout="@layout/view_doctor_title_right_bar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/suggestion_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2017-08-25 17:04"
            android:layout_marginLeft="17dp"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/suggestion_content_tv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="血压心率偏高，血压心率偏高，血压心率偏高，血压心率偏高，血压心率偏高，血压心率偏高"
            android:textSize="14dp"
            android:layout_marginLeft="17dp"
            />
        <ListView
            android:id="@+id/suggestion_image_lv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>

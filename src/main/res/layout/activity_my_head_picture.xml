<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/doctor_head_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:adjustViewBounds="true"
            />

        <RelativeLayout
            android:id="@+id/headpicture_camera_rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_bar"
            android:layout_marginLeft="@dimen/title_bar_text"
            android:layout_marginRight="@dimen/title_bar_text"
            android:layout_marginTop="@dimen/title_bar_text"
            android:background="@drawable/head_picture_border" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/doctor_set_photo"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_line_width"
            android:src="@color/gray_bg" />

        <RelativeLayout
            android:id="@+id/headpicture_photo_rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_bar"
            android:layout_marginLeft="@dimen/title_bar_text"
            android:layout_marginRight="@dimen/title_bar_text"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/head_picture_border" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/doctor_set_img"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/headpicture_cancle_rl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_bar"
            android:layout_marginBottom="@dimen/title_bar_text"
            android:layout_marginLeft="@dimen/title_bar_text"
            android:layout_marginRight="@dimen/title_bar_text"
            android:layout_marginTop="@dimen/title_bar_text"
            android:background="@color/login_loginBtn_bgColor" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/mycancel"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
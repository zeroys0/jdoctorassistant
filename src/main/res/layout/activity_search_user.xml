<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.doctor.userlist.SearchUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/back_igv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="centerInside"
            android:src="@drawable/back"
            android:layout_marginRight="15dp"
            />
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="5"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_border_white_corners20_bg"
    android:layout_gravity="center_vertical">
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/search_doctor"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/search_user_etv"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:textSize="10dp"
            android:maxLines="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/search_user_hint"
            android:textColorHint="@color/gray"
            android:padding="5dp"
            />
</RelativeLayout>
        <Button
            android:id="@+id/search_user_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="@string/search"
            android:background="@color/white"
            android:textColor="@color/app_blue"
            />

    </LinearLayout>

    <!--<AutoCompleteTextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/auto"-->
        <!--android:completionThreshold="1"-->
        <!--/>-->
    <ListView
        android:id="@+id/search_user_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        >
    </ListView>
</LinearLayout>

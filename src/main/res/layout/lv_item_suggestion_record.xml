<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/w_h_full"
    android:background="@color/white_bg"
    android:padding="10dp"
    android:layout_height="100dp"
    >

 <TextView
     android:id="@+id/suggestion_record_content_tv"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:maxLines="2"
     android:ellipsize="end"
     android:layout_marginLeft="27dp"
     android:text="血压心率偏高，血压心率偏高，血压心率偏高，血压心率偏高血压心率偏高，血压心率偏高，"
     android:textSize="15dp"
     />
 <TextView
     android:id="@+id/suggestion_record_pic_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="2张图片"
     android:layout_below="@id/suggestion_record_content_tv"
     android:textColor="#9c9c9c"
     android:layout_marginLeft="27dp"
     android:layout_marginTop="14dp"
     />
 <TextView
     android:id="@+id/suggestion_record_time_tv"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="08-25 17:06"
     android:textColor="#9c9c9c"
     android:layout_below="@id/suggestion_record_content_tv"
     android:layout_alignParentRight="true"
     android:layout_marginTop="14dp"
     />

</RelativeLayout>
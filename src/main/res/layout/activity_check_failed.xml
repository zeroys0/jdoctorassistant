<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.register.ResultActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/back_igv"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="centerInside"
                android:src="@drawable/back"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="18dp"
                android:text="审核结果"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/right_btn_igv"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="centerInside"
                />
            <TextView
                android:id="@+id/right_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="177dp"
            android:layout_height="138dp"
            android:src="@drawable/doctor_result"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/doctor_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="@string/check_failed"
            android:gravity="center_horizontal"
            />
        <Button
            android:id="@+id/re_edit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_bg"
            android:gravity="center"
            android:text="@string/re_edit"
            android:textColor="@color/white_bg"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>

</LinearLayout>
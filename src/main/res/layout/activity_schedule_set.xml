<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.jxj.jdoctorassistant.main.doctor.schedule.ScheduleSetActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/schedule_set_title"
                layout="@layout/view_doctor_title_right_bar"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_27"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/one"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/two"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/three"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/four"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/five"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/six"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/seven"
                        android:textColor="@color/blue_6a"
                        android:gravity="center"
                        />

                </LinearLayout>
                <com.jxj.jdoctorassistant.view.MyGridView
                    android:id="@+id/schedule_set_calendar_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:numColumns="7"
                    android:columnWidth="10dp"
                    android:background="@color/blue_27"
                    >

                </com.jxj.jdoctorassistant.view.MyGridView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_40_height"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/start_time"
                    android:textColor="@color/gray_87"
                    />
                <TextView
                    android:id="@+id/schedule_set_start_time_tv"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="00:00>"
                    android:gravity="right"
                    android:paddingRight="37dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_40_height"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                android:background="@color/white"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/end_time"
                    android:textColor="@color/gray_87"
                    />
                <TextView
                    android:id="@+id/schedule_set_end_time_tv"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="00:00>"
                    android:gravity="right"
                    android:paddingRight="37dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_40_height"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/num_limit"
                    android:textColor="@color/gray_87"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="3"
                    android:background="@null"
                    android:inputType="number"
                    android:id="@+id/schedule_set_num_etv"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_type"
                    android:textColor="@color/gray_87"
                    android:layout_gravity="center_vertical"
                    />
                <RadioGroup
                    android:id="@+id/schedule_type_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/schedule_type_pic_rb"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="@string/pic_text"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/schedule_set_type_rb_bg"
                        android:textColor="@color/white_black_rb_tc"
                        android:padding="5dp"
                        android:checked="true"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        />
                    <RadioButton
                        android:id="@+id/schedule_type_video_rb"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="100dp"
                        android:text="@string/video_audio"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/schedule_set_type_rb_bg"
                        android:textColor="@color/white_black_rb_tc"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        />
                    <RadioButton
                        android:id="@+id/schedule_type_hospital_rb"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="@string/hospital_treatment"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/schedule_set_type_rb_bg"
                        android:textColor="@color/white_black_rb_tc"
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        />


                    <RadioButton
                        android:id="@+id/schedule_type_visit_rb"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="-255dp"
                        android:text="@string/visit_service"
                        android:textSize="12sp"
                        android:button="@null"
                        android:background="@drawable/schedule_set_type_rb_bg"
                        android:textColor="@color/white_black_rb_tc"
                        android:padding="5dp"
                        android:gravity="center"
                        />


                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_40_height"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="5"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/hospiat_address"
                    android:textColor="@color/gray_87"
                    />
                <TextView
                    android:id="@+id/schedule_set_address_tv"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:text="乐聆社区医院 >"
                    android:gravity="right"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/schedule_set_save_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:textColor="@color/text_black"
                android:background="@drawable/gray_border_bg"
                android:text="@string/save"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/schedule_ins_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@android:drawable/screen_background_dark_transparent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="20dp"
                android:padding="10dp"
                >



                <ImageView
                    android:id="@+id/ins_igv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/schedule_text_ins"
                    />
                <ImageView
                    android:id="@+id/close_igv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ins_igv"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/close"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>

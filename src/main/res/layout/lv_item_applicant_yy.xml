<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <!--姓名-->
                <TextView
                    android:id="@+id/applicant_username_tv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="杨健"
                    android:textColor="@color/color5"
                    android:textSize="19sp"
                    />
                <!--评估次数-->
                <TextView
                    android:id="@+id/applicant_assess_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="3次评估"
                    android:textColor="@color/color4"
                    android:textSize="16sp"
                    />

                <!--程度-->
                <TextView
                    android:id="@+id/applicant_item1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="轻度"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >

                <!--性别-->
                <TextView
                    android:id="@+id/applicant_gender_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_sex"
                    android:text="男"
                    android:gravity="center_vertical"
                    android:textColor="@color/color3"
                    />
                <!--社保类型-->
                <TextView
                    android:id="@+id/applicant_social_security_tv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_shebao"
                    android:text="社保"
                    android:gravity="center_vertical"
                    android:textColor="@color/color3"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                >
                <!--身份证号-->
                <TextView
                    android:id="@+id/applicant_cardid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_idcard_num"
                    android:text="13020169895462134"
                    android:textColor="@color/color3"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >
                <!--社区地址-->
                <TextView
                    android:id="@+id/applicant_native_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_address"
                    android:text="河东区-东新街-环秀西里"
                    android:textColor="@color/color3"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/pinggu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘永贵"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/last_assess_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2017-08-12  10:32"
                    android:textColor="@color/color2"
                    />


            </RelativeLayout>

        </LinearLayout>

        <!--用于标注程度  正常 轻度 重度  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <!--程度 图片-->
            <ImageView
                android:id="@+id/applicant_item1_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/level_zhongdu"
                />


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>

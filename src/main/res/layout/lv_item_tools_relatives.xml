<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/w_h_full"
    android:background="@color/gray_bg" >

    <LinearLayout
        android:id="@+id/fragment_sports_plan_item_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px"
        android:layout_marginTop="20px"
        android:orientation="vertical"
        android:background="@drawable/white_corners3_bg" >

        <LinearLayout
            style="@style/w_full_h_wrap"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <RelativeLayout style="@style/w_wrap_h_wrap" >

                <TextView
                    android:id="@+id/relative_tv"
                    style="@style/w_wrap_h_wrap"
                    android:layout_alignParentLeft="true"
                    android:text="杨建"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/relative_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:src="@drawable/relative_one" />
            </RelativeLayout>

            <TextView
                android:id="@+id/relative_phone_tv"
                style="@style/w_wrap_h_wrap"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginTop="@dimen/margin_bottom"
                android:drawablePadding="@dimen/margin_bottom"
                android:drawableStart="@drawable/contact_phone"
                android:gravity="center"
                android:text="123456789"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_sports_plan_txt"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />

        <LinearLayout
            style="@style/w_h_full"
            android:layout_below="@id/fragment_sports_plan_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1" >

            <RelativeLayout
                android:id="@+id/relative_delete_rl"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/fragment_sports_plan_delete_txt"
                    style="@style/w_wrap_h_wrap"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="35dp"
                    android:text="删除"
                    android:textColor="@color/gray" />

                <ImageView
                    android:id="@+id/fragment_sports_plan_delete_imgv"
                    style="@style/w_wrap_h_wrap"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/fragment_sports_plan_delete_txt"
                    android:src="@drawable/sport_jwotch_set_delete" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@id/fragment_sports_plan_item_rl"
        android:background="@null" >
    </RelativeLayout>

</RelativeLayout>
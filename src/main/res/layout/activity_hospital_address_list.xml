<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.doctor.personal.HospitalAddressListActivity">

    <include
        android:id="@+id/hospital_address_title"
        layout="@layout/view_doctor_title_right_bar"
        />

    <Button
        android:id="@+id/add_hospital_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_hospital"
        android:textColor="@color/app_blue"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        />
    <ListView
        android:id="@+id/hospital_address_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hospital_address_title"
        android:layout_above="@id/add_hospital_btn"
        android:layout_marginBottom="1dp"
        android:dividerHeight="5dp"
        android:divider="@color/gray_bg"
        android:background="@color/white"
        >
    </ListView>
</RelativeLayout>

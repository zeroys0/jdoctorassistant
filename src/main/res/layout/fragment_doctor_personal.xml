<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.jxj.jdoctorassistant.main.doctor.fragment.FragmentPersonal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_doctor_personal_head_bg"
        >
        <ImageView
            android:id="@+id/qrcode_igv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12.5dp"
            android:src="@drawable/qr_code" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_title_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="我的"
            android:textColor="@color/white"
            android:textSize="@dimen/main_title_ts" />

        <ImageView
            android:id="@+id/set_igv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12.5dp"
            android:src="@drawable/set_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/main_title_height"
            android:background="@drawable/white_corners5_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <com.jxj.jdoctorassistant.view.RoundImageView
                android:id="@+id/fragment_doctor_personal_head_igv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="centerInside"
                android:src="@drawable/head_picture_man" />
            <LinearLayout
                android:id="@+id/fragment_doctor_personal_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/fragment_doctor_personal_head_igv"
                >
                <TextView
                    android:id="@+id/fragment_doctor_personal_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吴建成"
                    android:textSize="20sp"
                    />

                <RatingBar
                    android:id="@+id/fragment_doctor_personal_ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_yellow"
                    android:rating="4"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/fragment_doctor_personal_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="8分"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>



            <TextView
                android:id="@+id/fragment_doctor_personal_jobtitle_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_doctor_personal_name_ll"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_doctor_personal_head_igv"
                android:text="副主任医师/副教授 消化科专家"
                android:textColor="@color/gray_87"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/fragment_doctor_personal_hospital_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_doctor_personal_jobtitle_tv"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/fragment_doctor_personal_head_igv"
                android:text="上海交通大学附属第一人民医院"
                android:textColor="@color/gray_87"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/fragment_doctor_personal_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_doctor_personal_head_igv"
                android:layout_margin="10dp"
                android:text="擅长：治疗胃肠肝脏等，善于寻找适合不同患者的个性化治疗方案"

                />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/service_num_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/service_num"
                />
            <TextView
                android:id="@+id/service_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="208次"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提供服务"
                android:textColor="@color/gray_87"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notice_num_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/notice_num"/>
            <TextView
                android:id="@+id/notice_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25项"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:textSize="12sp"
                android:textColor="@color/gray_87"
                />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="患者评价 (255)"
        android:textColor="@color/text_black"
        android:gravity="center_vertical"
        android:textSize="12dp"
        android:layout_marginLeft="18dp"
        android:layout_centerVertical="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=">"
            android:textColor="#9c9c9c"
            android:textSize="12dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>

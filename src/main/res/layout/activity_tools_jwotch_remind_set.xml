<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/w_h_full"
        android:background="@color/gray_bg"
        android:orientation="vertical" >

    <include 
        android:id="@+id/remind_set_title"
        layout="@layout/view_title_right_bar" />

        <RelativeLayout
            style="@style/w_full_h_wrap"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/remind_theme"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/jwotch_remind_theme"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_bar_text" />

            <EditText
                android:id="@+id/remind_set_theme_edt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="@string/remind_theme"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_line_width"
            android:src="@color/gray_bg" />

        <RelativeLayout
            style="@style/w_full_h_wrap"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/remind_time"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_bar_text" />

            <TextView
                android:id="@+id/remind_set_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="15:35:42"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_line_width"
            android:src="@color/gray_bg" />

        <RelativeLayout
            style="@style/w_full_h_wrap"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/remind_cycle"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/jwotch_remind_cycle"
                android:textColor="@color/gray"
                android:textSize="@dimen/title_bar_text" />

            <TextView
                android:id="@+id/remind_set_cycle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_line_width"
            android:src="@color/gray_bg" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/bmi_mar_top" >

            <include layout="@layout/view_jwotch_cycle_set" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
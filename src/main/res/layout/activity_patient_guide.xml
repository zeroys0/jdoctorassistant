<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.doctor.userlist.PatientGuideActivity">
    <include
        android:id="@+id/patient_guide_title"
        layout="@layout/view_doctor_title_right_bar"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <EditText
        android:id="@+id/patient_guide_etv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top"
        android:background="@color/white"
        android:hint="@string/input_suggestion"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_pic"
        android:layout_margin="10dp"
        />
    <fragment
        android:id="@+id/patient_guide_pic_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.jxj.jdoctorassistant.takePic.ChooseFragment"
        />
    <Button
        android:id="@+id/patient_guide_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gray_border_bg"
        android:text="@string/complete"
        android:textColor="@color/text_black"
        />

            </LinearLayout>
    </ScrollView>
</LinearLayout>

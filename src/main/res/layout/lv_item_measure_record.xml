<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/w_h_full"
    android:background="@color/white_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:weightSum="5" >

        <LinearLayout
            style="@style/w_weight_h_full"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recode_time_tv"
                style="@style/w_weight_h_wrap"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/w_weight_h_full"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recode_pulse_tv"
                style="@style/w_wrap_h_wrap"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/w_weight_h_full"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recode_sp_tv"
                style="@style/w_wrap_h_wrap"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/w_weight_h_full"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recode_dp_tv"
                style="@style/w_wrap_h_wrap"
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/w_weight_h_full"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/recode_img"
                style="@style/w_wrap_h_wrap"
                android:layout_gravity="center"
                android:scaleType="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
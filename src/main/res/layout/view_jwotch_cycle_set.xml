<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/w_h_full" >

       <RadioGroup
            android:id="@+id/sport_jwotch_set_radiogroup"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" 
            android:background="@color/white"
            >

            <RadioButton
                android:id="@+id/sport_jwotch_set_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/cycle_one"
                android:textColor="@color/cycle_rb_tc"
                android:background="@color/white"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/sport_jwotch_set_everyday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/cycle_day"
                android:textColor="@color/cycle_rb_tc"
                android:background="@color/white"
                android:textSize="18sp" />



            <RadioButton
                android:id="@+id/sport_jwotch_set_myself"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/cycle_self"
                android:textColor="@color/cycle_rb_tc"
                android:background="@color/white"
                android:textSize="18sp" />
        </RadioGroup>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    tools:context="com.jxj.jdoctorassistant.main.doctor.schedule.ScheduleRecordActivity">

    <include
        android:id="@+id/schedule_record_title"
        layout="@layout/view_doctor_title_right_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@color/gray_bg"
        >
        <ListView
            android:id="@+id/schedule_record_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:background="@color/white"></ListView>

        <LinearLayout
            android:id="@+id/schedule_record_edit_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            android:background="@color/gray_bg"
            android:weightSum="2"
            android:visibility="gone"
            >

            <Button
                android:id="@+id/schedule_record_all_select_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/all_select" />

            <Button
                android:id="@+id/schedule_record_delete_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/delete"
                android:textColor="@color/red"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jxj.jdoctorassistant.main.register.RegisterForDoctorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_alignParentRight="true"
            android:text="登录"
            android:textColor="@color/login_registerText"
            android:textSize="18dp"
            android:layout_marginRight="13dp"
            android:id="@+id/text_login"/>
        <ImageView
            android:id="@+id/login_igv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_title"
        android:textSize="24dp"
        android:textColor="@color/text_black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="43dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/phone_number_et"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="@string/login_username_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_line_width"
            android:src="@color/login_loginBtn_bgColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5"
            >

            <EditText
                android:id="@+id/sms_code_et"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:background="@null"
                android:ems="10"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/get_sms_code_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginLeft="45dp"
                android:textSize="14dp"
                android:textColor="@color/hint_color"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/login_password_edt"
                android:inputType="textPassword"
                android:textColor="@color/black"
                />

            <CheckBox
                android:id="@+id/pwd_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/visiable_check_bg"
                android:button="@null"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_btn_height"
            android:layout_marginLeft="@dimen/title_bar_text"
            android:layout_marginRight="@dimen/title_bar_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_bg"
            android:gravity="center"
            android:text="@string/login_register_btn"
            android:textColor="@color/white_bg"
            android:textSize="20sp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/register_hint"
                android:textColor="@color/color3"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        style="@style/w_full_h_wrap"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="24dp"
        >

        <TextView
            android:id="@+id/login_system_code_tv"
            style="@style/w_wrap_h_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/system_code"
            android:textColor="@color/color3"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            />

    </RelativeLayout>

</LinearLayout>

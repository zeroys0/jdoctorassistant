<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/activity_title_bar" >

    <RelativeLayout
        style="@style/w_h_full"
        android:background="@color/titlebar_bgColor" >

        <ImageView
            android:id="@+id/backbtn"
            style="@style/w_wrap_h_wrap"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_bar_text"
            android:adjustViewBounds="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/titlename"
            style="@style/w_wrap_h_wrap"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white_bg"
            android:textSize="@dimen/title_bar_text" />

        <TextView
            android:id="@+id/title_other_name"
            style="@style/w_wrap_h_wrap"
            android:textColor="@color/white_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/title_bar_text"
            android:textSize="@dimen/title_bar_text" />
    </RelativeLayout>

</LinearLayout>
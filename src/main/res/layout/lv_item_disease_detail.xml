<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/disease_detail_name_tv"
        style="@style/w_full_h_wrap"
        android:textSize="20sp"
        android:textColor="#1a1a1a"
        android:layout_marginLeft="15dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:id="@+id/disease_detail_igv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/disease_detail"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/disease_detail_symptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/disease_detail_igv"
            android:textSize="12sp"
            android:textColor="#323232"
            android:layout_marginLeft="5dp"
            android:lineSpacingExtra="2dp"
            />

    </RelativeLayout>

    

</LinearLayout>

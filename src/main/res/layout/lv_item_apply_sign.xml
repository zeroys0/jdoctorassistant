<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/w_h_full"
    android:orientation="vertical"
    >

 <!--<TextView-->
     <!--android:id="@+id/apply_sign_date_tv"-->
     <!--android:layout_width="match_parent"-->
     <!--android:layout_height="wrap_content"-->
     <!--android:text="10-11"-->
     <!--android:gravity="center"-->
     <!--android:visibility="gone"-->
     <!--/>-->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="10dp"
     android:orientation="vertical"
     android:background="@drawable/white_corners5_bg"
     >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:padding="5dp"
       >
       <com.jxj.jdoctorassistant.view.RoundImageView
           android:id="@+id/apply_sign_head_rigv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/head_picture_man"
           />
       <TextView
           android:id="@+id/apply_sign_name_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/apply_sign_head_rigv"
           android:text="宋若军"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/sign_message"
           android:layout_toRightOf="@id/apply_sign_name_tv"
           android:layout_marginLeft="10dp"
           android:textColor="@color/green"
           />
       <TextView
           android:id="@+id/apply_sign_info_tv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="男|72岁|社保|河东区"
           android:textColor="@color/gray_87"
           android:layout_toRightOf="@id/apply_sign_head_rigv"
           android:layout_alignParentBottom="true"
           />

   </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginBottom="20dp"
      android:weightSum="2"
      >
   <Button
       android:id="@+id/apply_sign_refuse_btn"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="center"
       android:text="@string/refuse"
       android:textColor="@color/gray_87"
       android:background="@null"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       />
   <Button
       android:id="@+id/apply_sign_agree_btn"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:gravity="center"
       android:text="@string/agree"
       android:textColor="@color/white"
       android:background="@drawable/green_sign_corners5_bg"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       />
      <TextView
          android:id="@+id/apply_sign_state_tv"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_height="wrap_content"
          android:visibility="gone"
          />

  </LinearLayout>

 </LinearLayout>


</LinearLayout>
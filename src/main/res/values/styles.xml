<resources>


    <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="tallerBarStyle" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/download_progress_bg</item>
        <item name="android:indeterminateDrawable">@drawable/download_progress_bg</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">20dip</item>

    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/in_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/out_right_to_left</item>
    </style>
    <style name="w_h_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="w_wrap_h_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="w_weight_h_full">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0.0dp</item>
    </style>
    <style name="w_weight_h_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0.0dp</item>
    </style>
    <style name="w_wrap_h_full">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="w_full_h_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="style_sports_record_hint_blue">    
    <item name="android:textColor">#3685E3</item>  
    </style>  
  
	<style name="style_sports_record_hint_red">    
    <item name="android:textColor">@color/red</item>   
	</style> 
	<style name="style_sports_record_hint_gray">    
    <item name="android:textColor">#6b6b6b</item>   
	</style>

    <style name="horizontal_slide" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
    </style>
    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style>
</resources>
